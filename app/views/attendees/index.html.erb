<h2>Attendees</h2>

<div class="pull-right">
  <%= link_to "Add Attendee", new_event_attendee_path, class: 'btn' %>

  <% if current_user.admin %>
    <%= link_to "Import Attendees", import_event_attendees_path, class: 'btn' %>
    <%= link_to "Generate Badges", export_event_attendees_path, class: 'btn' %>
  <% end %>
</div>

<%= search_form_for @q, remote: true, url: event_attendees_path(@event) do |f| %>
  <%= f.search_field :first_name_or_last_name_cont, placeholder: "Search by first or last name", autocomplete: "off" %>
<% end %>

<table class="attendees-table">
  <tr>
    <th>Here?</th>
    <th>Last</th>
    <th>First</th>
    <th>Email</th>
    <th>Company</th>
    <th>Twitter / Website</th>
    <th>Shirt Size</th>
    <th>Role</th>
    <th></th>
  </tr>
  <tbody data-attendees-content>
    <%= render "attendees", attendees: @attendees %>
  </tbody>
</table>
