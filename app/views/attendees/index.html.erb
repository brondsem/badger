<h2>Attendees</h2>

<%= link_to "Add Attendee", new_event_attendee_path %>

<% if current_user.admin %>
  <%= link_to "Import Attendees", import_event_attendees_path %>
  <%= link_to "Generate Badges", export_event_attendees_path %>
<% end %>

<table>
  <tr>
    <th>Last</th>
    <th>First</th>
    <th>Email</th>
    <th>Company</th>
    <th>Role</th>
    <th></th>
  </tr>
  <% @attendees.each do |attendee| %>
    <tr>
      <td><%= attendee.last_name %></td>
      <td><%= attendee.first_name %></td>
      <td><%= attendee.email %></td>
      <td><%= attendee.company %></td>
      <td><%= attendee.role.name %></td>
      <td>
        <%= link_to "Edit", edit_event_attendee_path(attendee.event, attendee) %>
        <% if current_user.super_admin %>
          <%= link_to "Remove", event_attendee_path(attendee.event, attendee), method: :delete %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
