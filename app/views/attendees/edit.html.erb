<h1>Edit Attendee <small><%= link_to @event.name, event_path(@event)%></small></h1>

<% if @attendee.errors.any? %>
  <p class="alert">Unable to update attendee.
  <ul>
    <% @attendee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </p>
<% end %>

<%= render "form", event: @event, attendee: @attendee %>
