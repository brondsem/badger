<%= form_for event do |f| %>
  <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </div>
  <div class="field">
  <%= f.label :start_date %><br />
  <%= f.date_field :start_date, class: "datepicker" %>
  </div>
  <div class="field">
  <%= f.label :end_date %><br />
  <%= f.date_field :end_date, class: "datepicker" %>
  </div>
  <div class="field">
  <%= f.label :logo %><br />
  <%= f.file_field :logo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>