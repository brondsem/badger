<%= form_for event do |f| %>
  <div class="twogroups">
    <div>
      <%= f.label :name %><br />
    </div>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="twogroups">
    <div>
      <%= f.label :start_date %><br />
    </div>
    <div>
      <%= f.date_field :start_date, class: "datepicker" %>
    </div>
  </div>

  <div class="twogroups">
    <div>
      <%= f.label :end_date %><br />
    </div>
    <div>
      <%= f.date_field :end_date, class: "datepicker" %>
    </div>
  </div>
  
  <div class="twogroups">
    <div>
      <%= f.label :logo %><br />
    </div>
    <div>
      <%= f.file_field :logo %>
    </div>
  </div>
  
  <div class="twogroups">
    <div></div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
