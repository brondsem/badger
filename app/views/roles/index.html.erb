<%= link_to "Add Role", new_event_role_path(@event), class: "btn btn-primary pull-right" %>
<h1 class="page-title">Roles
  <small><%= link_to @event.name, event_path(@event) %></small>
</h1>

<table>
  <thead>
    <th>Role</th>
    <th>Description</th>
    <th>Reference Key</th>
    <th></th>
  </thead>
  <tbody>
    <% @event.roles.each do |role| %>
      <tr>
        <td style="background-color: #<%= role.border_color %>"><%= role.name %></td>
        <td></td>
        <td></td>
        <td class="actions">
          <%= link_to "Edit", edit_event_role_path(@event, role) %>
          <%= link_to "Delete", event_role_path(@event, role), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
