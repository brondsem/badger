<h1>Attendee Roles</h1>
<small><%= @event.name %></small>

<%= link_to "New Role", new_event_role_path(@event) %>
<table>
  <thead>
    <th>Role</th>
    <th>Reference Key</th>
    <th></th>
  </thead>
  <tbody>
    <% @event.roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.reference_key %></td>
        <td>
          <%= link_to "Edit", edit_event_role_path(@event, role) %>
          <%= link_to "Delete", event_role_path(@event, role), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
