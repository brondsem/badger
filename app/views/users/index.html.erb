<h2>Users</h2>
<%= link_to "New User", new_user_path %>

<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to "Edit", edit_user_path(user) %>
        <% if current_user.admin %>
          <%= link_to "Delete", user_path(user), method: :delete %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
