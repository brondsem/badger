<%= link_to "Add User", new_user_path, class: "btn btn-primary pull-right" %>
<h1 class="page-title">User Accounts</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Events</th>
    <th></th>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.events.pluck(:name).join(", ") %></td>
      <td class="actions">
        <%= link_to "Edit", edit_user_path(user) %>
        <% if current_user.admin %>
          <%= link_to "Delete", user_path(user), method: :delete %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
